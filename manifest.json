{
  "name": "Link Regex Creator",
  "description": "Create custom links based on regex",
  "version": "0.1",
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  },
  "icons": {
    "128": "icons/logo_128.png"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "manifest_version": 2
}